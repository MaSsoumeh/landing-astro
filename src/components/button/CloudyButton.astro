---
import {twMerge} from "tailwind-merge";
const { title,...restProps } = Astro.props;
---

    {/* Button Component */}
    <button class={twMerge("relative z-10 px-6 py-3 font-bold uppercase tracking-wider text-teal-500 border-3 border-teal-500 transition-all duration-700 ease-in-out hover:text-white overflow-visible group cursor-pointer",Astro.props.class)} {...restProps}>
        {title}
        {/* Blobs Container */}
        <span class=" absolute inset-0 -bottom-[3px] -right-[1px] z-[-1] h-full overflow-hidden filter-[url(#goo)]">
            {/* Blob 1 */}
            <span class=" absolute left-[-5%] h-full w-[34%] rounded-full bg-teal-500 scale-140 translate-y-[125%] transition-all duration-700 ease-in-out group-hover:translate-y-0" />

            {/* Blob 2 */}
            <span class=" absolute left-[30%] h-full w-[34%] rounded-full bg-teal-500 scale-140 translate-y-[125%] transition-all duration-700 ease-in-out group-hover:translate-y-0 delay-75" />

            {/* Blob 3 */}
            <span class=" absolute left-[66%] h-full w-[34%] rounded-full bg-teal-500 scale-140 translate-y-[125%] transition-all duration-700 ease-in-out group-hover:translate-y-0 delay-25" />
        </span>
    </button>
