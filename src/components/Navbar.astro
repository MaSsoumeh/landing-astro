---
import "../styles/global.css";
import ThemeIcon from "./ThemeIcon.astro";
---

<header class="bg-gradient-to-r bg-[#000036] shadow-[0_4px_24px_0_rgba(0,0,0,0.08)] fixed w-full z-30">
  <nav class="max-w-7xl flex items-center justify-between py-3 px-5">
    <div class="flex items-center space-x-reverse gap-10 space-x-2">
      <img src="/public/images/logo.svg" width={74} />

      <ul
        class="hidden md:flex items-center space-x space-x-6 text-[#3DB1B0] font-light"
      >
        <li>
          <a href="#about" class="hover:text-white transition">معرفی شرکت</a
          >
        </li>
        <li>
          <a href="#services" class="hover:text-white transition">خدمات</a>
        </li>
        <li>
          <a href="#projects" class="hover:text-white transition"
            >پروژه‌ها</a
          >
        </li>
        <li>
          <a href="#jobs" class="hover:text-white transition"
            >فرصت‌های شغلی</a
          >
        </li>
        <li>
          <a href="#testimonials" class="hover:text-white transition"
            >مشتریان</a
          >
        </li>
        <li>
          <a href="#contact" class="hover:text-white transition"
            >تماس با ما</a
          >
        </li>
      </ul>
    </div>

    <!--<ThemeIcon />-->

    <button
      class="md:hidden flex flex-col space-y-1"
      onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
    >
      <span class="w-7 h-1 bg-white rounded"></span>
      <span class="w-7 h-1 bg-white rounded"></span>
      <span class="w-7 h-1 bg-white rounded"></span>
    </button>
  </nav>
  <div id="mobile-menu" class="md:hidden bg-white py-4 px-5 hidden shadow-lg">
    <ul class="flex flex-col space-y-3 text-right font-medium text-[white]">
      <li>
        <a href="#about" class="hover:text-white transition">معرفی شرکت</a>
      </li>
      <li>
        <a href="#services" class="hover:text-white transition">خدمات</a>
      </li>
      <li>
        <a href="#projects" class="hover:text-white transition">پروژه‌ها</a>
      </li>
      <li>
        <a href="#jobs" class="hover:text-white transition">فرصت‌های شغلی</a
        >
      </li>
      <li>
        <a href="#testimonials" class="hover:text-white transition"
          >مشتریان</a
        >
      </li>
      <li>
        <a href="#contact" class="hover:text-white transition">تماس با ما</a
        >
      </li>
    </ul>
    <a
      href="#contact"
      class="block w-full text-center mt-3 px-4 py-2 bg-white text-white rounded-xl hover:bg-white transition font-semibold"
      >شروع همکاری</a
    >
  </div>
</header>
