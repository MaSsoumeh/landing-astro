<section class="extension section-light">
  <div class="container">
    <div class="extension-content">
      <h2>Use as Extension</h2>
      <p>
        Seamlessly integrate WhiteSpace with your browser for quick access and
        enhanced productivity. Stay organized without switching between tabs.
      </p>
      <a href="#" class="btn btn-primary">Install Extension</a>
    </div>
    <div class="extension-image">
      <img src="/images/extension.png" alt="WhiteSpace Browser Extension" />
    </div>
  </div>
</section>

<style>
  .extension .container {
    display: flex;
    align-items: center;
    gap: 3rem;
  }

  .extension-content {
    flex: 1;
  }

  .extension-image {
    flex: 1;
  }

  .extension-image img {
    max-width: 100%;
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 992px) {
    .extension .container {
      flex-direction: column-reverse;
    }
  }
</style>
