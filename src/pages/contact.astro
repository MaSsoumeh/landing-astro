<section id="contact" class="relative py-16 bg-gray-50">
  <div class="max-w-3xl mx-auto px-6">
    <h2 class="text-3xl font-extrabold text-teal-400 text-center mb-8">
      تماس با ما
    </h2>
    <form
      class="bg-white shadow rounded-xl p-8 space-y-6"
      method="POST"
      action="#"
    >
      <div>
        <label class="block mb-1 font-bold text-gray-600" for="name"
          >نام و نام خانوادگی</label
        >
        <input
          id="name"
          name="name"
          type="text"
          required
          class="w-full p-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-300 bg-gray-50"
        />
      </div>
      <div>
        <label class="block mb-1 font-bold text-gray-600" for="email"
          >ایمیل</label
        >
        <input
          id="email"
          name="email"
          type="email"
          required
          class="w-full p-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-300 bg-gray-50"
        />
      </div>
      <div>
        <label class="block mb-1 font-bold text-gray-600" for="message"
          >پیام شما</label
        >
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          class="w-full p-3 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-300 bg-gray-50"
        ></textarea>
      </div>
      <button
        type="submit"
        class="w-full py-3 bg-amber-500 text-white font-bold rounded-xl hover:bg-amber-500 transition"
        >ارسال پیام</button
      >
    </form>
    <div
      class="flex justify-center space-x-reverse space-x-6 mt-6 text-2xl text-teal-700"
    >
      <a href="https://linkedin.com/" target="_blank"
        ><i class="fab fa-linkedin hover:bg-amber-800"></i></a
      >
      <a href="https://twitter.com/" target="_blank"
        ><i class="fab fa-twitter hover:bg-amber-400"></i></a
      >
      <a href="https://instagram.com/" target="_blank"
        ><i class="fab fa-instagram hover:text-pink-500"></i></a
      >
    </div>
  </div>

  <svg
    class="absolute left-14 bottom-30 hidden md:block w-50 opacity-20 z-0 animate-float"
    viewBox="0 0 200 200"
    ><circle fill="#bdede8" cx="100" cy="100" r="90"></circle></svg
  >
  <svg
    class="absolute right-14 bottom-30 hidden md:block w-30 opacity-20 z-0 animate-float-rev"
    viewBox="0 0 200 200"
    ><circle fill="#f4ddb0" cx="100" cy="100" r="90"></circle></svg
  >

  <svg
    class="absolute right-14 top-30 hidden md:block w-10 opacity-30 z-0 animate-float-rev"
    viewBox="0 0 200 200"
    ><circle fill="#bdede8" cx="100" cy="100" r="90"></circle></svg
  >
</section>
